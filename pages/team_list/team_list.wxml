<!--pages/team_list/team_list.wxml-->

<view class="head">
  <view class="class_name">
    <text>VC693：面向对象程序设计</text>
  </view>
  <view class="intro">
    <image src="../../image/team_list/team.jpg"/>
    <text class="sup">5人</text>
    <text class="count">共计5队</text>
    <navigator class="out">导出队伍信息</navigator>
    <view class="clear"></view>
  </view>
  <view class="option choose">
    <navigator class="join" url="../team_list/team_list">加入队伍</navigator>
  </view>
  <view class="option">
    <navigator class="create" url="../team_create/team_create">创建队伍</navigator>
  </view>
  <view class="clear"></view>
</view>
<view class="team_list">

  <navigator url="../team_more/team_more" wx:for="{{teams}}" wx:for-item="team">
    <view class="team">
      <view class="id">
        <text>ID：{{team.id}}</text>
      </view> 
      <view class="join">
        <image src="../../image/team_list/join.jpg"/>
      </view>   
      <view class="number">
        <text>{{team.count}}/{{team.sup}}</text>
      </view>
      <view class="clear"></view>
      <view class="info">
        <text class="member">成员：{{team.member}}</text>
      </view>
      <view class="info last_intro">
        <text class="brief_intro">简介：{{team.info}}</text>
      </view>
    </view>
  </navigator>
  
</view>

